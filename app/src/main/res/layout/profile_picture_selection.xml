<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/dialog_box">

    <GridLayout
        android:id="@+id/profile_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/pfp1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_picture_placeholder"
            android:scaleType="centerCrop"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/pfp2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_picture_placeholder_2"
            android:scaleType="centerCrop"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/pfp3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_picture_placeholder_3"
            android:scaleType="centerCrop"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/pfp4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_picture_placeholder_4"
            android:scaleType="centerCrop"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/pfp5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_picture_placeholder_5"
            android:scaleType="centerCrop"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/pfp6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_picture_placeholder_6"
            android:scaleType="centerCrop"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/pfp7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_picture_placeholder_7"
            android:scaleType="centerCrop"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/pfp8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_picture_placeholder_8"
            android:scaleType="centerCrop"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/pfp9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_picture_placeholder_9"
            android:scaleType="centerCrop"
            android:background="@null"/>

    </GridLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/profile_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/close_button"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/close_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Close"
        app:layout_constraintTop_toBottomOf="@id/profile_grid"
        app:layout_constraintStart_toEndOf="@id/save_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
